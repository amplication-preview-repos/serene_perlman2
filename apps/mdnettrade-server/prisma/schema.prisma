datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Scheme {
  createdAt        DateTime                @default(now())
  duration         Int?
  durationUnit     EnumSchemeDurationUnit?
  fixedReturnPrice Float?
  id               String                  @id @default(cuid())
  investments      Investment[]
  name             String?
  price            Float?
  returnPercentage Float?
  updatedAt        DateTime                @updatedAt
}

model Investment {
  amountInvested Float?
  createdAt      DateTime              @default(now())
  endDate        DateTime?
  id             String                @id @default(cuid())
  scheme         Scheme?               @relation(fields: [schemeId], references: [id])
  schemeId       String?
  startDate      DateTime?
  status         EnumInvestmentStatus?
  updatedAt      DateTime              @updatedAt
  user           User?                 @relation(fields: [userId], references: [id])
  userId         String?
}

model User {
  country     String?
  createdAt   DateTime          @default(now())
  currency    EnumUserCurrency?
  email       String?           @unique
  firstName   String?
  id          String            @id @default(cuid())
  investments Investment[]
  lastName    String?
  password    String
  phoneNumber String?
  roles       Json
  updatedAt   DateTime          @updatedAt
  username    String            @unique
}

model Admin {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  password  String?
  role      String?
  updatedAt DateTime @updatedAt
  username  String?
}

enum EnumSchemeDurationUnit {
  Option1
}

enum EnumInvestmentStatus {
  Option1
}

enum EnumUserCurrency {
  Option1
}
